<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp" tools:context=".MainActivity">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText"/>
        <Button
            android:id="@+id/visalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="visAlle"
            android:text="Vis Alle" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/visview"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Legg til"
            android:id="@+id/leggtil"
            android:onClick="leggtil"/>
        <Button
            android:id="@+id/slett"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="slett"
            android:text="Slett" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>