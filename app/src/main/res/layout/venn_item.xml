<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Tekstvisning for navn med fet tekst og større skriftstørrelse -->
    <TextView
        android:id="@+id/navnTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Navn"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Tekstvisning for telefonnummer med vanlig skriftstørrelse -->
    <TextView
        android:id="@+id/telefonTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Telefon"
        android:textSize="16sp" />

    <!-- Tekstvisning for bursdag med vanlig skriftstørrelse -->
    <TextView
        android:id="@+id/bursdagTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bursdag"
        android:textSize="16sp" />

    <!-- Skillelinje for visuell separasjon -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC" />

</LinearLayout>
